<Window x:Class="OrdersWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система замовлень" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва частина - Створення замовлення -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <TextBlock Text="Створити замовлення" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <ComboBox x:Name="cmbOrderType" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Online замовлення"/>
                <ComboBoxItem Content="Store замовлення"/>
            </ComboBox>

            <TextBlock Text="Номер:" Margin="0,5,0,2"/>
            <TextBox x:Name="txtNumber" Text="1001" Margin="0,0,0,10"/>

            <TextBlock Text="Клієнт:" Margin="0,5,0,2"/>
            <TextBox x:Name="txtClient" Text="Іван Іванов" Margin="0,0,0,10"/>

            <TextBlock Text="Доставка:" Margin="0,5,0,2"/>
            <TextBox x:Name="txtDelivery" Text="50" Margin="0,0,0,10"/>

            <TextBlock Text="Додати товар:" FontWeight="Bold" Margin="0,10,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBox x:Name="txtItemName" Width="120" Text="Товар 1" Margin="0,0,5,0"/>
                <TextBox x:Name="txtItemPrice" Width="60" Text="100" Margin="0,0,5,0"/>
                <TextBox x:Name="txtItemQty" Width="40" Text="1" Margin="0,0,5,0"/>
                <Button x:Name="btnAddItem" Content="+" Width="30" Click="BtnAddItem_Click"/>
            </StackPanel>

            <Button x:Name="btnCreateOrder" Content="Створити замовлення" 
                    Click="BtnCreateOrder_Click" Margin="0,10,0,5" Height="30"/>
            <Button x:Name="btnClear" Content="Очистити" Click="BtnClear_Click"/>
        </StackPanel>

        <!-- Права частина - Список замовлень -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Список замовлень" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgOrders" AutoGenerateColumns="False" Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер" Binding="{Binding Number}" Width="80"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                    <DataGridTextColumn Header="Сума" Binding="{Binding TotalAmount}" Width="80"/>
                    <DataGridTextColumn Header="Фінальна" Binding="{Binding FinalAmount}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Товари замовлення -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Товари в замовленні" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
            <DataGrid x:Name="dgItems" AutoGenerateColumns="False" Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="80"/>
                    <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Сума" Binding="{Binding Total}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Підсумки -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock x:Name="txtSummary" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnCalculate" Content="Підрахувати загальну суму" 
                    Click="BtnCalculate_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>